# -----------------------------------------------------------------------------
# Production Environment Configuration
# FreeQwenImage AI Tools Platform
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# Web Information
# -----------------------------------------------------------------------------
NEXT_PUBLIC_WEB_URL = "https://your-production-domain.com"
NEXT_PUBLIC_PROJECT_NAME = "FreeQwenImage AI Tools Platform"

# -----------------------------------------------------------------------------
# RunningHub API Configuration (REQUIRED)
# https://www.runninghub.cn
# -----------------------------------------------------------------------------
RUNNINGHUB_API_URL = "https://api.runninghub.ai"
RUNNINGHUB_API_KEY = "your_production_api_key"
RUNNINGHUB_WEBAPP_ID = "your_webapp_id"

# RunningHub Node IDs for different AI tools
RUNNINGHUB_TEXT_TO_IMAGE_NODE_ID = "1"      # 文生图节点ID
RUNNINGHUB_IMAGE_ENHANCER_NODE_ID = "2"     # 图像增强节点ID  
RUNNINGHUB_IMAGE_TO_IMAGE_NODE_ID = "3"     # 图生图节点ID
RUNNINGHUB_IMAGE_TO_VIDEO_NODE_ID = "4"     # 图生视频节点ID

# -----------------------------------------------------------------------------
# Authentication (Optional)
# https://authjs.dev/getting-started/installation?framework=Next.js
# -----------------------------------------------------------------------------
AUTH_SECRET = "your_production_auth_secret_generate_with_openssl_rand_base64_32"
AUTH_URL = "https://your-production-domain.com/api/auth"
AUTH_TRUST_HOST = true

# Disable auth if not needed
NEXT_PUBLIC_AUTH_ENABLED = "false"

# Google Auth (Optional)
AUTH_GOOGLE_ID = ""
AUTH_GOOGLE_SECRET = ""
NEXT_PUBLIC_AUTH_GOOGLE_ID = ""
NEXT_PUBLIC_AUTH_GOOGLE_ENABLED = "false"
NEXT_PUBLIC_AUTH_GOOGLE_ONE_TAP_ENABLED = "false"

# Github Auth (Optional)
AUTH_GITHUB_ID = ""
AUTH_GITHUB_SECRET = ""
NEXT_PUBLIC_AUTH_GITHUB_ENABLED = "false"

# -----------------------------------------------------------------------------
# Database (Optional - for user management)
# -----------------------------------------------------------------------------
DATABASE_URL = "your_production_database_url"

# -----------------------------------------------------------------------------
# Analytics (Recommended for production)
# -----------------------------------------------------------------------------
# Google Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID = "your_ga_tracking_id"

# OpenPanel Analytics (Alternative)
NEXT_PUBLIC_OPENPANEL_CLIENT_ID = ""

# Plausible Analytics (Alternative)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN = "your-domain.com"
NEXT_PUBLIC_PLAUSIBLE_SCRIPT_URL = "https://plausible.io/js/script.js"

# -----------------------------------------------------------------------------
# Error Tracking (Recommended for production)
# -----------------------------------------------------------------------------
SENTRY_DSN = "your_sentry_dsn"
SENTRY_ORG = "your_sentry_org"
SENTRY_PROJECT = "your_sentry_project"
SENTRY_AUTH_TOKEN = "your_sentry_auth_token"

# -----------------------------------------------------------------------------
# Performance Monitoring
# -----------------------------------------------------------------------------
# Enable performance monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING = "true"

# Web Vitals reporting endpoint
NEXT_PUBLIC_WEB_VITALS_ENDPOINT = "/api/analytics/web-vitals"

# -----------------------------------------------------------------------------
# CDN and Static Assets (Optional)
# -----------------------------------------------------------------------------
# CDN domain for static assets
NEXT_PUBLIC_CDN_DOMAIN = "https://cdn.your-domain.com"

# Image optimization service
NEXT_PUBLIC_IMAGE_DOMAIN = "your-domain.com"

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED = "true"

# Rate limiting
NEXT_PUBLIC_RATE_LIMIT_ENABLED = "true"
RATE_LIMIT_MAX_REQUESTS = "100"
RATE_LIMIT_WINDOW_MS = "60000"

# -----------------------------------------------------------------------------
# Storage Configuration (Optional)
# For file uploads and caching
# -----------------------------------------------------------------------------
STORAGE_ENDPOINT = "your_s3_endpoint"
STORAGE_REGION = "your_region"
STORAGE_ACCESS_KEY = "your_access_key"
STORAGE_SECRET_KEY = "your_secret_key"
STORAGE_BUCKET = "your_bucket_name"
STORAGE_DOMAIN = "https://your-storage-domain.com"

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# For notifications and support
# -----------------------------------------------------------------------------
SMTP_HOST = "smtp.your-provider.com"
SMTP_PORT = "587"
SMTP_USER = "your_smtp_user"
SMTP_PASS = "your_smtp_password"
SMTP_FROM = "noreply@your-domain.com"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/disable specific features
NEXT_PUBLIC_FEATURE_TEXT_TO_IMAGE = "true"
NEXT_PUBLIC_FEATURE_IMAGE_TO_IMAGE = "true"
NEXT_PUBLIC_FEATURE_IMAGE_ENHANCER = "true"
NEXT_PUBLIC_FEATURE_IMAGE_TO_VIDEO = "true"

# Beta features
NEXT_PUBLIC_FEATURE_BATCH_PROCESSING = "false"
NEXT_PUBLIC_FEATURE_USER_ACCOUNTS = "false"
NEXT_PUBLIC_FEATURE_PAYMENT = "false"

# -----------------------------------------------------------------------------
# Internationalization
# -----------------------------------------------------------------------------
NEXT_PUBLIC_LOCALE_DETECTION = "true"
NEXT_PUBLIC_DEFAULT_LOCALE = "en"
NEXT_PUBLIC_SUPPORTED_LOCALES = "en,zh,ja,ko"

# -----------------------------------------------------------------------------
# Theme Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEFAULT_THEME = "system"
NEXT_PUBLIC_THEME_SWITCHING = "true"

# -----------------------------------------------------------------------------
# Admin Configuration
# -----------------------------------------------------------------------------
ADMIN_EMAILS = "admin@your-domain.com,support@your-domain.com"

# -----------------------------------------------------------------------------
# Payment Configuration (Optional)
# https://docs.stripe.com/keys
# -----------------------------------------------------------------------------
STRIPE_PUBLIC_KEY = ""
STRIPE_PRIVATE_KEY = ""
STRIPE_WEBHOOK_SECRET = ""

NEXT_PUBLIC_PAY_SUCCESS_URL = "/success"
NEXT_PUBLIC_PAY_FAIL_URL = "/error"
NEXT_PUBLIC_PAY_CANCEL_URL = "/ai-tools"

# -----------------------------------------------------------------------------
# Advertising (Optional)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_GOOGLE_ADCODE = ""

# -----------------------------------------------------------------------------
# Environment Specific Settings
# -----------------------------------------------------------------------------
NODE_ENV = "production"
NEXT_TELEMETRY_DISABLED = "1"

# Build optimization
NEXT_PUBLIC_BUILD_ID = ""
NEXT_PUBLIC_BUILD_TIME = ""

# Logging level
LOG_LEVEL = "info"

# -----------------------------------------------------------------------------
# Health Check Configuration
# -----------------------------------------------------------------------------
HEALTH_CHECK_ENABLED = "true"
HEALTH_CHECK_ENDPOINT = "/api/health"

# -----------------------------------------------------------------------------
# Backup and Recovery (Optional)
# -----------------------------------------------------------------------------
BACKUP_ENABLED = "false"
BACKUP_SCHEDULE = "0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS = "30"